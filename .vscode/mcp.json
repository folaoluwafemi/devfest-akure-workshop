{
  "servers": {
    "supabase": {
      "command": "cmd",
      "args": [
        "/c",
        "npx",
        "-y",
        "@supabase/mcp-server-supabase",
        "--project-ref={your-project-ref}",
      ],
      "env": {
        "SUPABASE_ACCESS_TOKEN": "{your-personal-access-token}"
      }
    },
    "Figma Desktop": {
      "type": "http",
      "url": "{localServerUrl-from-figma-desktop-app}",
    }
  }
}